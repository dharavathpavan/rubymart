<div class="container py-5">
  <div class="row">
    <!-- Filters Sidebar -->
    <div class="col-lg-3 mb-4" data-aos="fade-right">
      <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px;">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
             <h5 class="fw-bold mb-0">Filters</h5>
             <a href="/products" class="small text-decoration-none text-danger">Reset</a>
          </div>
          
          <div class="mb-4">
            <h6 class="fw-bold mb-3 text-uppercase text-muted small letter-spacing-1">Categories</h6>
            <div class="nav flex-column nav-pills gap-2">
              <a href="/products" class="nav-link rounded-pill px-3 <%= 'active bg-primary text-white shadow' unless params[:category_id] %> <%= 'text-dark hover-bg-light' if params[:category_id] %>">
                <i class="fas fa-border-all me-2"></i> All Products
              </a>
              <% Category.all.each do |category| %>
                <a href="/products?category_id=<%= category.id %>" class="nav-link rounded-pill px-3 d-flex justify-content-between align-items-center <%= 'active bg-primary text-white shadow' if params[:category_id].to_i == category.id %> <%= 'text-dark hover-bg-light' unless params[:category_id].to_i == category.id %>">
                  <span>
                     <% case category.name
                        when 'Electronics' %> <i class="fas fa-mobile-alt me-2"></i>
                     <% when 'Clothing' %> <i class="fas fa-tshirt me-2"></i>
                     <% when 'Books' %> <i class="fas fa-book me-2"></i>
                     <% else %> <i class="fas fa-tag me-2"></i>
                     <% end %>
                    <%= category.name %>
                  </span>
                  <span class="badge bg-light text-dark rounded-pill"><%= category.products.count %></span>
                </a>
              <% end %>
            </div>
          </div>
          
          <div class="mb-2">
            <h6 class="fw-bold mb-3 text-uppercase text-muted small letter-spacing-1">Price Range</h6>
            <div class="d-flex align-items-center gap-2">
               <input type="number" class="form-control rounded-pill text-center" placeholder="Min">
               <span class="text-muted">-</span>
               <input type="number" class="form-control rounded-pill text-center" placeholder="Max">
            </div>
            <button class="btn btn-outline-primary w-100 rounded-pill mt-3 btn-sm">Apply</button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Products Grid -->
    <div class="col-lg-9">
      <!-- Header -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 p-3 bg-white rounded-4 shadow-sm" data-aos="fade-down">
         <div class="mb-3 mb-md-0">
           <h2 class="fw-bold mb-1"><%= @category ? @category.name : "All Collection" %></h2>
           <span class="text-muted small"><%= @products.count %> products found</span>
         </div>
         <div class="d-flex gap-3">
           <select class="form-select border-0 bg-light rounded-pill">
             <option>Sort by: Featured</option>
             <option>Price: Low to High</option>
             <option>Price: High to Low</option>
             <option>Newest First</option>
           </select>
           <div class="btn-group" role="group">
             <button class="btn btn-light text-primary active"><i class="fas fa-th"></i></button>
             <button class="btn btn-white text-muted"><i class="fas fa-list"></i></button>
           </div>
         </div>
      </div>

      <% if @products.any? %>
        <div class="row g-4">
          <% @products.each_with_index do |product, index| %>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="<%= index * 50 %>">
              <div class="card product-card h-100 border-0 shadow-sm rounded-4 animate-hover">
                <div class="card-img-wrapper rounded-top-4">
                   <!-- Image handling -->
                  <% if product.image.attached? %>
                    <img src="<%= url_for(product.image) %>" class="card-img-top" alt="<%= product.name %>">
                  <% else %>
                    <img src="https://loremflickr.com/400/400/<%= product.name.downcase.split.first %>?lock=<%= product.id %>" class="card-img-top" alt="<%= product.name %>">
                  <% end %>
                  
                  <!-- Overlays -->
                  <div class="hover-overlay flex-column gap-2">
                    <%= form_with url: add_item_cart_path, method: :post, local: true do |f| %>
                       <%= f.hidden_field :product_id, value: product.id %>
                       <%= button_tag type: 'submit', class: "btn btn-primary rounded-pill px-4 shadow-lg w-100" do %>
                         Add to Cart
                       <% end %>
                    <% end %>
                    <a href="<%= product_path(product) %>" class="btn btn-light text-dark rounded-pill px-4 shadow-lg">
                      Quick View
                    </a>
                  </div>
                  
                  <% if product.stock == 0 %>
                     <div class="position-absolute top-50 start-50 translate-middle w-100 text-center" style="background: rgba(0,0,0,0.6); padding: 50% 0;">
                        <span class="badg bg-danger px-3 py-2 text-white fw-bold text-uppercase border border-white">Sold Out</span>
                     </div>
                  <% end %>
                </div>
                
                <div class="card-body p-3 d-flex flex-column">
                  <div class="mb-2">
                    <span class="badge bg-light text-muted border fw-normal"><%= product.category.name %></span>
                  </div>
                  <h5 class="card-title fw-bold">
                    <a href="<%= product_path(product) %>" class="text-dark text-decoration-none hover-primary"><%= product.name %></a>
                  </h5>
                  <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                    <span class="fs-5 fw-bold text-gradient">$<%= product.price %></span>
                    <button class="btn btn-link text-muted p-0"><i class="far fa-heart"></i></button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
           <div class="mb-4 text-muted opacity-25">
             <i class="fas fa-search fa-5x"></i>
           </div>
           <h3>No products found</h3>
           <p class="text-muted">Try adjusting your filters or category.</p>
           <a href="/products" class="btn btn-primary rounded-pill px-4">Clear Filters</a>
        </div>
      <% end %>
      
      <!-- Pagination Mock -->
      <div class="d-flex justify-content-center mt-5">
        <nav>
          <ul class="pagination pagination-md gap-2">
            <li class="page-item disabled"><a class="page-link rounded-circle border-0 bg-light icon-box" href="#"><i class="fas fa-chevron-left"></i></a></li>
            <li class="page-item active"><a class="page-link rounded-circle border-0 shadow-sm" href="#">1</a></li>
            <li class="page-item"><a class="page-link rounded-circle border-0 bg-transparent text-muted" href="#">2</a></li>
            <li class="page-item"><a class="page-link rounded-circle border-0 bg-transparent text-muted" href="#">3</a></li>
            <li class="page-item"><a class="page-link rounded-circle border-0 bg-light icon-box" href="#"><i class="fas fa-chevron-right"></i></a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
